{
  "manifest_version": 2,
  "name": "Ecommerse Scam Detector",
  "version": "1.0",
  "description": "An extension that tries to detect if a website is a scam or not",
  "background": {
    "scripts": [
      "./node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "background.js",
      "popup.html",
      "popup.js"
    ]
  },
  "permissions": ["webNavigation", "tabs", "runtime", "storage", "browserAction"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "icons": {
    "38": "/icons/red-circle.png"
  },
  "web_accessible_resources": [
    "/icons/green-circle.png",
    "/icons/yellow-circle.png",
    "/icons/red-circle.png"
  ],
  "browser_action": {
    "default_icon": {
      "38": "/icons/red-circle.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}