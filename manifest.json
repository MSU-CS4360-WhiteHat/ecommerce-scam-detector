{
  "manifest_version": 2,
  "name": "Ecommerse Scam Detector",
  "version": "1.0",
  "description": "An extension that tries to detect if a website is a scam or not",
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["src/alert/alert.js"],
      "css": ["src/alert/alert.css"]
    }
  ],
  "background": {
    "scripts": [
      "./node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "src/background/background.js",
      "crawl.js",
      "payload.js"
    ],
    "persistent": true
  },
  "permissions": [
    "<all_urls>",
    "webNavigation",
    "tabs",
    "runtime",
    "storage",
    "browserAction"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*/*",
    "http://*/*",
    "http://*/",
    "https://*/"
  ],
  "icons": {
    "38": "/icons/default.svg"
  },
  "web_accessible_resources": [
    "/icons/safe.svg",
    "/icons/warning.svg",
    "/icons/unsafe.svg",
    "/icons/default.svg"
  ],
  "browser_action": {
    "default_icon": {
      "38": "/icons/default.svg"
    },
    "default_popup": "src/popup/popup.html"
  }
}
